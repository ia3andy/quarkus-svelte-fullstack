{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend-build": "rollup -c",
    "frontend-dev": "rollup -c -w",
    "start": "sirv public --no-clear --port 8888",
    "check": "svelte-check --tsconfig ./tsconfig.json",

    "clean-generated": "rmdir /s /q \"svelte/generated/api\"",
    "generate": "openapi-generator-cli generate --generator-key v3.0 --skip-validate-spec -g typescript-angular -i svelte/generated/openapi/openapi.yaml -o svelte/generated/ts --global-property models",
    "watch-api": "nodemon -e yaml --watch svelte/generated/openapi -x \"npm run generate\"",
    "dev": "npm-run-all --parallel frontend-dev watch-api",
    "generate-and-build": "npm run generate && npm run frontend-build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^3.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",

    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "@openapitools/openapi-generator-cli": "^2.4.23"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0"
  }
}
