{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend-build": "rollup -c",
    "frontend-dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",

    "backend-build": "cd ../backend && mvn package",
    "clean-generated": "rmdir /s /q \"svelte/app/generated/api\"",
    "generate": "npm run clean-generated & wait-on http://localhost:8080/q/openapi && openapi-generator-cli generate --generator-key v3.0 --skip-validate-spec -g typescript-angular -i http://localhost:8080/q/openapi -o svelte/app/generated/api --global-property models",
    "watch-api": "nodemon -e java --watch ../backend/src/main/java -x \"npm run backend-build && npm run generate\"",
    "dev": "npm-run-all --parallel frontend-dev watch-api"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",

    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.0",
    "@openapitools/openapi-generator-cli": "^2.4.23"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
